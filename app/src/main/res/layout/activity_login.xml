<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = "amazingme.activities.app.LoginActivity">

    <EditText
        android:id="@+id/login_activity_password_edit_text"
        android:layout_width="556dp"
        android:layout_height="87dp"
        android:focusable="true"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHighlight="@color/amazing_me_green"
        android:textColorHint="@color/amazing_me_green"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="371dp"
        android:layout_below="@+id/login_activity_email_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <EditText
        android:id="@+id/login_activity_email_edit_text"
        android:layout_width="556dp"
        android:layout_height="87dp"
        android:focusable="true"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHighlight="@color/amazing_me_green"
        android:textColorHint="@color/amazing_me_green"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="371dp"
        android:layout_below="@+id/textview"
        android:layout_alignLeft="@+id/login_activity_password_edit_text"
        android:layout_alignStart="@+id/login_activity_password_edit_text"
        android:layout_marginTop="71dp" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Amazing Me"
        android:textColor="@color/amazing_me_blue"
        android:textSize="60sp"
        android:textStyle="bold" />


    <!--android:layout_alignLeft="@+id/login_activity_forgot_password_button"-->
