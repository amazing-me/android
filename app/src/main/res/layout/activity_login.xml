        <!--android:layout_alignRight="@+id/login_activity_password_edit_text"-->
        <!--android:layout_alignEnd="@+id/login_activity_password_edit_text" />-->

    <Button
        android:id="@+id/login_activity_login_button"
        android:layout_width="239dp"
        android:layout_height="94dp"
        android:backgroundTint="@color/amazing_me_blue"
        android:text="Login"
        android:textColor="@color/amazing_me_white"
        android:textSize="20sp"
        android:layout_marginLeft="108dp"
        android:layout_marginStart="108dp"
        android:layout_alignTop="@+id/login_activity_register_button"
        android:layout_toRightOf="@+id/login_activity_register_button"
        android:layout_toEndOf="@+id/login_activity_register_button" />

    <Button
        android:id="@+id/login_activity_register_button"
        android:layout_width="239dp"
        android:layout_height="94dp"
        android:backgroundTint="@color/amazing_me_white"
        android:text="Register"
        android:textColor="@color/amazing_me_blue"
        android:layout_marginLeft="143dp"
        android:layout_marginStart="143dp"
        android:layout_below="@+id/login_activity_password_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/amazingmelogo"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/login_activity_forgot_password_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/login_activity_forgot_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Forgot Password?"
        android:textColor="@color/amazing_me_blue_and_white"
        android:textStyle="bold|italic"
        android:textSize="25dp"
        android:layout_below="@+id/login_activity_login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

