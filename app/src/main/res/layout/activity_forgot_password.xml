<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amazingme.activities.app.ForgotPasswordActivity">

    <EditText
        android:id="@+id/forgot_password_email_text"
        android:layout_width="556dp"
        android:layout_height="87dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textview"
        android:focusable="true"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHighlight="@color/amazing_me_green"
        android:textColorHint="@color/amazing_me_green"
        android:textSize="50sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="750dp" />

    <Button
        android:id="@+id/forgot_password_back_button"
        android:layout_width="239dp"
        android:layout_height="94dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="@color/amazing_me_white"
        android:text="Back"
        android:textColor="@color/amazing_me_blue"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/forgot_password_send_button"
        tools:layout_editor_absoluteY="517dp" />

    <Button
        android:id="@+id/forgot_password_send_button"
        android:layout_width="239dp"
        android:layout_height="94dp"
        android:layout_marginRight="148dp"
        android:backgroundTint="@color/amazing_me_blue"
        android:text="Send Password"
        android:textColor="@color/amazing_me_white"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="517dp" />

    <TextView
        android:id="@+id/forgot_password_email_label"
        android:layout_width="604dp"
        android:layout_height="235dp"
        android:text="Please Enter your email address to receive a password recovery email!"
        android:textAlignment="center"
        android:textColor="@color/amazing_me_blue"
        android:textSize="50sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/forgot_password_email_text"
        app:layout_constraintVertical_bias="0.708" />

</android.support.constraint.ConstraintLayout>
