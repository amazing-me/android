<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amazingme.activities.app.ForgotPasswordActivity">

    <EditText
        android:id="@+id/forgot_password_email_text"
        android:layout_width="244dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textview"
        android:focusable="true"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHighlight="@color/amazing_me_green"
        android:textColorHint="@color/amazing_me_green"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="159dp" />

    <Button
        android:id="@+id/forgot_password_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="190dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="@color/amazing_me_blue"
        android:text="Back"
        android:textColor="@color/amazing_me_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/forgot_password_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/amazing_me_blue"
        android:text="Send Password"
        android:textColor="@color/amazing_me_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_email_text"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/forgot_password_back_button"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:id="@+id/forgot_password_email_label"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Please Enter your email address to receive a password recovery email!"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/amazing_me_blue"
        app:layout_constraintBottom_toTopOf="@+id/forgot_password_email_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
