<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amazingme.activities.app.PrimaryCarePhysicianInformationActivity"
    android:background="@drawable/upperbackgroundlb">

    <TextView
        android:id="@+id/pcp_information_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="12sp"
        android:text="Primary Care Physician Contact Information"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/amazing_me_white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/pcp_information_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="347dp"
        android:checked="true"
        android:textOff="No"
        android:textOn="Yes"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintLeft_toRightOf="@+id/pcp_information_back_button"
        app:layout_constraintRight_toLeftOf="@+id/pcp_information_next_button"
        app:layout_constraintTop_toBottomOf="@+id/pcp_information_text_view"
        app:layout_constraintVertical_bias="0.455" />

    <EditText
        android:id="@+id/pcp_information_email_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/amazing_me_blue"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="301dp" />

    <EditText
        android:id="@+id/pcp_information_phone_number_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:visibility="visible"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="@color/amazing_me_blue"
        android:textColorHint="@color/amazing_me_blue"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pcp_information_email_edit_text" />

    <Button
        android:id="@+id/pcp_information_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp"
        android:layout_marginLeft="25dp"
        android:text="Back"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/pcp_information_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp"
        android:layout_marginRight="16dp"
        android:text="Next"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <QuickContactBadge
        android:id="@+id/quickContactBadge"
        android:layout_width="172dp"
        android:layout_height="137dp"
        app:srcCompat="@drawable/mother"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="114dp" />


</android.support.constraint.ConstraintLayout>