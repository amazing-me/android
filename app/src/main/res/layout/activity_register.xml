<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = "amazingme.activities.app.RegisterActivity"
    android:background="@drawable/amazingbackgroundfix">

    <TextView
        android:id="@+id/textview"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="@color/amazing_me_blue"
        android:textSize="60sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/register_activity_email_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHighlight="#5eb41b"
        android:textColorHint="#5eb41b"
        android:textSize="50sp"
        android:layout_below="@+id/textview"
        android:layout_alignLeft="@+id/register_activity_password_edit_text"
        android:layout_alignStart="@+id/register_activity_password_edit_text"
        android:layout_marginTop="383dp"
        android:layout_alignRight="@+id/register_activity_password_edit_text"
        android:layout_alignEnd="@+id/register_activity_password_edit_text" />

    <EditText
        android:id="@+id/register_activity_password_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_activity_email_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#5eb41b"
        android:textSize="50sp" />

    <Button
        android:id="@+id/register_activity_register_button"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/register_activity_back_button"
        android:layout_alignEnd="@+id/register_activity_password_edit_text"
        android:layout_alignRight="@+id/register_activity_password_edit_text"
        android:layout_alignTop="@+id/register_activity_back_button"
        android:backgroundTint="@color/amazing_me_blue"
        android:text="Register"
        android:textColor="@color/amazing_me_white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/register_activity_back_button"
        android:layout_width="239dp"
        android:layout_height="94dp"
        android:layout_alignLeft="@+id/register_activity_password_edit_text"
        android:layout_alignStart="@+id/register_activity_password_edit_text"
        android:layout_below="@+id/register_activity_password_edit_text"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/amazing_me_white"
        android:text="Back"
        android:textColor="@color/amazing_me_blue"
        android:textSize="20sp" />

</RelativeLayout>
