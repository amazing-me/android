<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = "amazingme.activities.games.ThreeTouchGame">

    <TextView
        android:id="@+id/game_three_touch_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Three Touch Game"
        android:textColor="@color/amazing_me_blue"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/game_three_touch_instr1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Press the "
        android:textColor="@color/amazing_me_blue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_below="@+id/game_three_touch_title_text"
        android:layout_alignLeft="@+id/game_three_touch_instr3_text"
        android:layout_alignStart="@+id/game_three_touch_instr3_text" />

    <TextView
        android:id="@+id/game_three_touch_seconds_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60 seconds"
        android:textColor="@color/amazing_me_blue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/game_three_touch_start_button"
        android:layout_alignEnd="@+id/game_three_touch_start_button" />

    <TextView
        android:id="@+id/game_three_touch_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Time Left:"
        android:textColor="@color/amazing_me_blue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_toStartOf="@+id/game_three_touch_seconds_text"
        android:layout_toLeftOf="@+id/game_three_touch_seconds_text"
        android:layout_alignTop="@+id/game_three_touch_seconds_text" />

    <TextView
        android:id="@+id/game_three_touch_instr2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/game_three_touch_instr3_text"
        android:layout_toEndOf="@+id/game_three_touch_instr1_text"
        android:layout_toRightOf="@+id/game_three_touch_instr1_text"
        android:text="red square"
        android:textColor="@color/amazing_me_red"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/game_three_touch_instr3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/game_three_touch_title_text"
        android:layout_alignLeft="@+id/game_three_touch_title_text"
        android:layout_alignRight="@+id/game_three_touch_title_text"
        android:layout_alignStart="@+id/game_three_touch_title_text"
        android:layout_below="@+id/game_three_touch_instr1_text"
        android:text="three times in one minute"
        android:textAlignment="center"
        android:textColor="@color/amazing_me_blue"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/game_three_touch_red_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/amazing_me_red"
        android:visibility="invisible"
        android:layout_alignTop="@+id/game_three_touch_start_button"
        android:layout_alignLeft="@+id/game_three_touch_instr1_text"
        android:layout_alignStart="@+id/game_three_touch_instr1_text" />

    <Button
        android:id="@+id/game_three_touch_blue_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/amazing_me_blue"
        android:visibility="invisible"
        android:layout_alignTop="@+id/game_three_touch_start_button"
        android:layout_alignRight="@+id/game_three_touch_instr2_text"
        android:layout_alignEnd="@+id/game_three_touch_instr2_text" />

    <Button
        android:id="@+id/game_three_touch_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/amazing_me_blue"
        android:text="Start!"
        android:textColor="@color/amazing_me_white"
        android:textSize="24sp"
        android:layout_below="@+id/game_three_touch_instr3_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/game_three_touch_pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/game_three_touch_stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:visibility="invisible"
        android:layout_above="@+id/game_three_touch_pause_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
