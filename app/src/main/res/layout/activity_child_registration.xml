<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amazingme.activities.app.ChildRegistrationActivity">

    <TextView
        android:id="@+id/child_registration_date_of_birth_text_view"
        android:layout_width="145dp"
        android:layout_height="41dp"
        android:text="Date of Birth"
        android:textAlignment="center"
        android:textColor="@color/amazing_me_blue"
        android:textSize="24sp"
        android:layout_marginTop="17dp"
        app:layout_constraintRight_toRightOf="@+id/child_registration_last_name"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_last_name"
        tools:layout_editor_absoluteX="35dp" />

    <TextView
        android:id="@+id/child_registration_sex_text_view"
        android:layout_width="145dp"
        android:layout_height="41dp"
        android:text="Sex"
        android:textAlignment="center"
        android:textColor="@color/amazing_me_blue"
        android:textSize="24sp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_year_spinner"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/child_registration_sex_spinner"
        android:layout_width="93dp"
        android:layout_height="37dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_sex_text_view"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="46dp"
        android:text="Child Registration"
        android:textAlignment="center"
        android:textColor="@color/amazing_me_blue"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/child_registration_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="First Name"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/child_registration_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Last Name"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_first_name"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="35dp" />

    <Spinner
        android:id="@+id/child_registration_month_spinner"
        android:layout_width="296dp"
        android:layout_height="43dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_date_of_birth_text_view"
        app:layout_constraintLeft_toRightOf="@+id/child_registration_day_spinner"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <Spinner
        android:id="@+id/child_registration_day_spinner"
        android:layout_width="93dp"
        android:layout_height="37dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="14dp"
        app:layout_constraintLeft_toRightOf="@+id/child_registration_year_spinner"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_date_of_birth_text_view"
        android:layout_marginStart="18dp" />

    <Spinner
        android:id="@+id/child_registration_year_spinner"
        android:layout_width="93dp"
        android:layout_height="37dp"
        tools:layout_editor_absoluteX="35dp"
        android:layout_marginTop="14dp"
        app:layout_constraintLeft_toRightOf="@+id/child_registration_day_spinner"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_date_of_birth_text_view" />

    <Button
        android:id="@+id/child_registration_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:layout_marginLeft="35dp"
        android:text="Done!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/child_registration_add_another_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Another Child"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="58dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_sex_spinner"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>