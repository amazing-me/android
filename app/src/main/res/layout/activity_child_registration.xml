<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amazingme.activities.app.ChildRegistrationActivity">

    <TextView
        android:id="@+id/child_registration_date_of_birth_text_view"
        android:layout_width="145dp"
        android:layout_height="0dp"
        android:text="Date of Birth"
        android:gravity="center"
        android:textColor="@color/amazing_me_blue"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="53dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/child_registration_month_spinner"
        android:layout_marginBottom="35dp"
        app:layout_constraintTop_toTopOf="@+id/child_registration_last_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/child_registration_sex_text_view"
        android:layout_width="145dp"
        android:layout_height="41dp"
        android:text="Sex"
        android:gravity="center"
        android:textColor="@color/amazing_me_blue"
        android:textSize="24sp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_date_of_birth_text_view"
        android:layout_marginLeft="89dp"
        app:layout_constraintLeft_toLeftOf="@+id/child_registration_date_of_birth_text_view" />

    <Spinner
        android:id="@+id/child_registration_sex_spinner"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/spinner_border"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_sex_text_view"
        app:layout_constraintLeft_toLeftOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="Child Registration"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/amazing_me_blue"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/child_registration_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:textColorHint="@color/amazing_me_green"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="35dp"
        android:layout_marginTop="67dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/child_registration_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:layout_marginTop="26dp"
        android:textColorHint="@color/amazing_me_green"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_first_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="35dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.487" />

    <Spinner
        android:id="@+id/child_registration_month_spinner"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintBottom_toBottomOf="@+id/child_registration_day_spinner"
        app:layout_constraintRight_toRightOf="@+id/child_registration_date_of_birth_text_view"
        app:layout_constraintTop_toTopOf="@+id/child_registration_day_spinner"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Spinner
        android:id="@+id/child_registration_day_spinner"
        android:layout_height="37dp"
        android:layout_width="85dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/child_registration_month_spinner"
        app:layout_constraintRight_toRightOf="@+id/child_registration_sex_spinner"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_last_name"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Spinner
        android:id="@+id/child_registration_year_spinner"
        android:layout_width="85dp"
        android:layout_height="37dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintLeft_toRightOf="@+id/child_registration_day_spinner"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_last_name" />

    <Button
        android:id="@+id/child_registration_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Done!"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/child_registration_sex_spinner"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_bias="0.06"
        android:textColor="@color/amazing_me_white"
        android:backgroundTint="@color/amazing_me_blue"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_sex_spinner"
        app:layout_constraintLeft_toRightOf="@+id/child_registration_add_another_button"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/child_registration_add_another_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Another Child"
        android:textColor="@color/amazing_me_white"
        android:backgroundTint="@color/amazing_me_blue"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_sex_spinner"
        android:layout_marginLeft="37dp"
        app:layout_constraintLeft_toLeftOf="@+id/child_registration_month_spinner" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>